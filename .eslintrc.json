{
    "plugins": [ "jasmine" ],
    "env": {
        "jasmine": true
    },
    "extends" : ["airbnb-base/legacy", "plugin:jasmine/recommended"],
    "rules": {
        "func-names": "off",
        "no-alert": "off",
        "no-console": "off",
        "no-multi-spaces": "off",
        "no-plusplus": "off",
        "no-unused-vars": "warn",
        "space-infix-ops": "off",
        "one-var": "off",
        "one-var-declaration-per-line": "off",
        "vars-on-top": "off"
    }
}
